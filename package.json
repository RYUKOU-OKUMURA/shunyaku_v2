{
  "name": "shunyaku-v2",
  "version": "1.0.0",
  "description": "Local hover translation app for macOS using Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "dev": "electron . --dev",
    "prepare": "husky install",
    "precommit": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "electron",
    "macos",
    "translation",
    "ocr",
    "deepl",
    "screenshot"
  ],
  "author": "Shunyaku Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "deepl-node": "^1.11.0",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "sharp": "^0.34.4",
    "tesseract.js": "^4.1.4",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
