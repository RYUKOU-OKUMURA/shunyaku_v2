{
  "name": "shunyaku-v2",
  "version": "1.0.0",
  "description": "Local hover translation app for macOS using Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "jest --coverage && playwright test",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "dev": "electron . --dev",
    "prepare": "husky install",
    "precommit": "npm run lint:fix && npm run format",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac --publish=never",
    "build:script": "./scripts/build-dmg.sh",
    "build:ci": "./scripts/build-ci.sh",
    "dist": "npm run build:dmg"
  },
  "keywords": [
    "electron",
    "macos",
    "translation",
    "ocr",
    "deepl",
    "screenshot"
  ],
  "author": "Shunyaku Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.56.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "deepl-node": "^1.11.0",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "sharp": "^0.34.4",
    "tesseract.js": "^4.1.4",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.shunyaku.v2",
    "productName": "Shunyaku v2",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "type": "distribution",
      "icon": "assets/icon.icns",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Shunyaku v2 Installer",
      "format": "ULFO",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": null,
      "icon": null
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!**/node_modules/**",
      "!tests/**",
      "!coverage/**",
      "!docs/**",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  }
}
